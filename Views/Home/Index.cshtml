@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div id="header-container">
        <h1 id="attendance-header">ATTENDANCE RECORD</h1>
    </div>
    <div id="attendance-manager-container">
        @for (int i = 0; i < 15; i++)
        {

            <div class="employee-card">
                <span class="attendance-detail-container employee-card-reset">
                    <div class="attendance-detail employee-card-reset">@($"Employee{i+1}") Name</div>
                    <div class="attendance-detail employee-card-reset">@($"Employee{i+1}") Role</div>
                </span>
                <span class="attendance-marker-container employee-card-reset">
                    @for (int j = 0; j < 6; j++)
                    {
                        <span class="attendance-marker employee-card-reset"></span>
                    }
                </span>
            </div>
        }
    </div>
</div>